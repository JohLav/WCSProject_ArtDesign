{% extends 'layout.html.twig' %}

{% block content %}
    {% include 'Dashboard/_sidenav.html.twig' %}
    <h1>Liste des lieux</h1>
    <table class="table">
        <thead>
        <tr>
            <th>Type</th>
            <th>Adresse</th>
            <th>Code postal</th>
            <th>Ville</th>
            <th>Téléphone</th>
        </tr>
        </thead>
        <tbody>
        {% for place in places %}
            {% include 'place/show.html.twig' %}
        {% else %}
            <div>
                Il n'y a pas encore de lieux.
            </div>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
