<div class="container card">
        <div class="card-body d-flex flex-column align-items-center">
            <form method="POST">
                <h1>Ajouter un événement</h1>
                <div class="form-outline mb-4">
                    <input type="text" class="form-control" name="name_event" id="form1Example1" required>
                    <label class="form-label" for="form1Example1">Titre</label>
                </div>

                <div class="form-outline mb-4">
                    <input type="date" class="form-control" id="date" name="date" required>
                    <label class="form-label" for="form1Example1">Date</label>
                </div>

                <div class="form-outline mb-4">
                    <select name="place_id" id="place" class="form-select">
                        <option value="" disabled selected>Choisir un lieu</option>
                        {% for place in places %}
                            <option value="{{ place.id }}">{{ place.kind }}</option>
                        {% endfor %}
                    </select>
                </div>

                <button class="btn btn-primary" type="submit">Envoyer</button>

            </form>
        </div>
</div>

